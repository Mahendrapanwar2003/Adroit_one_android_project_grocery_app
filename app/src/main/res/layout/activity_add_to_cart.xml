<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddToCartActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewId"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/adroit_one_"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tvNameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginHorizontal="6dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tvDetailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:textStyle="italic"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="1dp"
                android:textColor="@color/watercolor"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tvPriceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="price"
                android:textStyle="italic"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="1dp"
                android:textColor="@color/watercolor"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tvCategoryId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textStyle="italic"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="1dp"
                android:textColor="@color/watercolor"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <Button
                android:id="@+id/btnRemoveId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/btnCancelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE"
                android:layout_marginEnd="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center"
                />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>